<Page x:Class="P2Project.View.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:P2Project.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage" Background="DarkOliveGreen">

    <Grid>
        <Button Content="Log af" HorizontalAlignment="Left" Margin="646,364,0,0" VerticalAlignment="Top" Width="75" Command="{Binding LogofCommand}"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CurrentUser.Username}" VerticalAlignment="Top" Margin="363,255,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding NumberofExercises}" VerticalAlignment="Top" Margin="363,298,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding DanishUserType}" VerticalAlignment="Top" Margin="363,364,0,0"/>

    </Grid>
</Page>
