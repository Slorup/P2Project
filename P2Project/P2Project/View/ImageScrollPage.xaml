<Page x:Class="P2Project.View.ImageScrollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:P2Project.View"
      mc:Ignorable="d" 
      MinHeight="140" MinWidth="120"
      Title="ImageScrollPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Background="AliceBlue" BorderThickness="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Command="{Binding ImageClickCommand}">
            <Image VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Source="{Binding CurrentImagePath}"/>
        </Button>
        <Button Grid.Row="1" Height="20" Width="50" Content="Forrige" HorizontalAlignment="Left" Command="{Binding GoLeftCommand}" Visibility="{Binding ButtonVisibility}"/>
        <Button Grid.Row="1" Height="20" Width="50" Content="Næste" HorizontalAlignment="Right" Command="{Binding GoRightCommand}" Visibility="{Binding ButtonVisibility}"/>
    </Grid>
</Page>
