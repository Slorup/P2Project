<Page x:Class="P2Project.View.ExercisePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:P2Project.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExercisePage" Background="HotPink">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
            <StackPanel Width="200" Background="AliceBlue" VerticalAlignment="Stretch" Visibility="{Binding PanelVisibility}">
                <TextBlock TextWrapping="Wrap" Text="{Binding Exercisedescription}"/>
                <Button Content="Færdig" Command="{Binding FinishedExerciseCommand}"/>
                <Button Content="Spring over" Command="{Binding SkipExerciseCommand}"/>
                <StackPanel>
                    <Button Content="arrow Left" HorizontalAlignment="Left"  Command="{Binding GoLeftCommand}"/>
                    <Image  Height="100" Width="100" VerticalAlignment="Top" Source="{Binding ImagePath}"/>
                    <Button Content="arrow Right" HorizontalAlignment="Right" Command="{Binding GoRightCommand}"/>
                </StackPanel>
            </StackPanel>
            <Button VerticalAlignment="Center" HorizontalAlignment="Left" Width="15" Height="50" Command="{Binding PanelShowCommand}"/>
        </StackPanel>
    </Grid>
</Page>
