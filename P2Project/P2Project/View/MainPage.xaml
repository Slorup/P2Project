<Page x:Class="P2Project.View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:P2Project.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" Background="LightSkyBlue">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="22" FontSize="15" FontWeight="DemiBold">
                <StackPanel>
                    <Menu Height="22" FontSize="15" FontWeight="DemiBold">
                        <MenuItem Header="Opgaver">
                            <MenuItem Header="Løs opgave" Command="{Binding MenuExerciseCommand}"/>
                            <MenuItem Header="Opret opgave" Command="{Binding MenuMakeExerciseCommand}"/>
                        </MenuItem>
                    </Menu>
                </StackPanel>
                <MenuItem Header="Profil" Command="{Binding MenuProfileCommand}"/>
                <MenuItem Header="Log?"/>
                <MenuItem Header="Admin"/>
                
            </Menu>
            <Frame Name="SubNavigationFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Page>
