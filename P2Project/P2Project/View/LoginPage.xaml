<Page x:Class="P2Project.View.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:P2Project.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="HotPink">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="1" Grid.Column="1" Text="Username" Name="tbUserName" FontSize="26" FontWeight="SemiBold" Height="40" Width="200" VerticalAlignment="Top" PreviewMouseDown="TextBox_PreviewMouseDown"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Login" Height="40" Width="140" VerticalAlignment="Bottom" Command="{Binding LoginClickCommand}" CommandParameter="{Binding Text, ElementName=tbUserName}"/>
    </Grid>
</Page>
